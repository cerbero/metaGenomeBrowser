    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
<p>
  <strong>User:</strong>
  <%= User.find(session[:user_id]).name %>
</p>
  <div class="field" readonly>
    <%= f.label :user_id %><br>
    <%= f.text_field :user_id, :readonly => true, :default => User.find(session[:user_id]).name %>
  </div>
	<div class="field">
	  <%= f.label :file %><br>
	  <%= f.file_field :file %>
	</div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
