<p id="notice"><%= notice %></p>

<h1>Listing Datasets</h1>
<div class="message warning">
<table>
  <thead>
    <tr>
      <th>Dataset name</th>
      <th>Description</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

    <% @datasets.each do |dataset| %>
  <% if current_user.name == User.find(session[:user_id]).name %>
      <tr>
        <td><%= dataset.dataset_name %></td>
        <td><%= dataset.description %></td>
        <td><%= User.find(session[:user_id]).name %></td>
        <td><%= link_to 'Show', dataset %></td>
        <td><%= link_to 'Edit', edit_dataset_path(dataset) %></td>
        <td><%= link_to 'Destroy', dataset, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
<% end %>
</div>
  </tbody>
</table>

<br>

<%= link_to 'New Dataset', new_dataset_path %>
